@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<style>
    body {
        background: #f0f4f8;
    }

    .techxpress-login-container {
        display: flex;
        min-height: 80vh;
        font-family: 'Arial', sans-serif;
    }

    .login-image {
        flex: 1;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 40px;
    }

        .login-image img {
            max-width: 100%;
            max-height: 80vh;
            object-fit: contain;
            border-radius: 1rem;
        }

    .login-form-container {
        flex: 1;
        background-color: #ffffff;
        border-radius: 1rem;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        padding: 60px 40px;
        max-width: 500px;
        margin: auto;
    }

        .login-form-container h2 {
            font-size: 32px;
            font-weight: 700;
            margin-bottom: 10px;
            text-align: center;
            color: #007bff; /* أزرق */
        }

    .login-subtitle {
        color: #666;
        font-size: 16px;
        margin-bottom: 30px;
        text-align: center;
    }

    .input-group {
        position: relative;
        margin-bottom: 30px;
    }

        .input-group input {
            width: 100%;
            padding: 12px 15px 12px 40px;
            border-radius: 0.5rem;
            border: 1px solid #ccc;
            font-size: 16px;
            background: none;
        }

        .input-group label {
            position: absolute;
            top: 50%;
            left: 40px;
            transform: translateY(-50%);
            font-size: 16px;
            color: #999;
            background-color: #fff;
            padding: 0 5px;
            transition: 0.2s ease all;
            pointer-events: none;
        }

        .input-group input:focus + label,
        .input-group input:not(:placeholder-shown) + label {
            top: -10px;
            left: 30px;
            font-size: 13px;
            color: #007bff;
            background: #fff;
        }

    .form-icon {
        position: absolute;
        top: 50%;
        left: 15px;
        transform: translateY(-50%);
        color: #aaa;
    }

    .toggle-password {
        position: absolute;
        top: 50%;
        right: 15px;
        transform: translateY(-50%);
        cursor: pointer;
        color: #aaa;
    }

    .login-btn {
        background-color: #007bff;
        color: white;
        padding: 12px;
        border-radius: 0.5rem;
        border: none;
        width: 100%;
        font-weight: 600;
        font-size: 18px;
        transition: background-color 0.3s;
    }

        .login-btn:hover {
            background-color: #0056b3;
        }

    .forgot-password, .switch-link {
        text-align: center;
        margin-top: 15px;
    }

        .forgot-password a,
        .switch-link a {
            color: #666;
            text-decoration: none;
            transition: color 0.3s;
        }

            .forgot-password a:hover,
            .switch-link a:hover {
                color: #007bff;
                text-decoration: underline;
            }

    @@media (max-width: 768px) {
        .techxpress-login-container {
            flex-direction: column;
        }

        .login-image {
            display: none;
        }

        .login-form-container {
            padding: 40px 20px;
            width: 100%;
            border-radius: 0;
            box-shadow: none;
        }
    }
</style>

<div class="techxpress-login-container">
    <div class="login-image">
        <img src="/images/Login/Login.jpg" alt="Login Image" class="img-fluid">
    </div>

    <div class="login-form-container">
        <h2>Welcome Back</h2>
        <p class="login-subtitle">Log in to access your account</p>

        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="input-group">
                <i class="fa fa-envelope form-icon"></i>
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder=" " />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="input-group">
                <i class="fa fa-lock form-icon"></i>
                <input asp-for="Input.Password" type="password" class="form-control" autocomplete="current-password" aria-required="true" id="password" placeholder=" " />
                <label asp-for="Input.Password"></label>
                <i class="fa fa-eye toggle-password" onclick="togglePasswordVisibility(this)"></i>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input class="form-check-input" asp-for="Input.RememberMe" />
                <label class="form-check-label" asp-for="Input.RememberMe">
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>

            <button type="submit" class="login-btn">Log In</button>

            <p class="forgot-password">
                <a asp-page="./ForgotPassword">Forgot your password?</a>
            </p>

            <p class="switch-link">
                Don’t have an account?
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Sign up</a>
            </p>

            <p class="switch-link">
                <a asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
            </p>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function togglePasswordVisibility(icon) {
            const passwordInput = document.getElementById('password');
            const isPassword = passwordInput.type === 'password';
            passwordInput.type = isPassword ? 'text' : 'password';
            icon.classList.toggle('fa-eye');
            icon.classList.toggle('fa-eye-slash');
        }
    </script>
}
