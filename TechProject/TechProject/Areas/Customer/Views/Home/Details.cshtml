@model Product
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" rel="stylesheet">
<style>
    .thumbnail-image {
        transition: all 0.3s ease;
    }

        .thumbnail-image:hover {
            transform: scale(1.05);
            box-shadow: 0 0 10px rgba(0,0,0,0.2);
        }

    .main-product-image {
        transition: opacity 0.3s ease;
    }

    .active-thumbnail {
        border: 2px solid #0d6efd !important;
    }
</style>

<div class="container py-5">
    <div class="row">
        <!-- Product Images -->
        <div class="col-md-6 mb-4">
            <div class="card">
                @if (Model.ProductImages.Count > 0)
                {
                    <img src="@Model.ProductImages[0].ImageUrl" class="card-img-top main-product-image" alt="@Model.Name" style="cursor: pointer; max-height: 400px; object-fit: contain;">
                }
                else
                {
                    <img src="https://via.placeholder.com/600x400?text=No+Image" class="card-img-top main-product-image" alt="No Image" style="cursor: pointer; max-height: 400px; object-fit: contain;">
                }

                <div class="card-body">
                    <div class="row g-2">
                        @for (int i = 0; i < Model.ProductImages.Count; i++)
                        {
                            <div class="col-3">
                                <img src="@Model.ProductImages[i].ImageUrl"
                                     class="img-thumbnail thumbnail-image @(i == 0 ? "active-thumbnail" : "")"
                                     alt="Thumbnail @(i + 1)"
                                     style="cursor: pointer;"
                                     onclick="changeMainImage(this)">
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Product Details -->
        <div class="col-md-6">
            <h1 class="h2 mb-3">@Model.Name</h1>
            <div class="mb-3">
                <span class="h4 me-2">$@Model.Price</span>
                @if (Model.Price > 0)
                {
                    <span class="text-muted text-decoration-line-through">$@Model.Price</span>
                    <span class="badge bg-danger ms-2">@((int)(100 - (Model.Price / Model.Price * 100)))% OFF</span>
                }
            </div>

            <div class="mb-3">
                <div class="d-flex align-items-center">
                    <div class="text-warning me-2">
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star"></i>
                        <i class="fas fa-star-half-alt"></i>
                    </div>
                    <span class="text-muted">(128 reviews)</span>
                </div>
            </div>

            <p class="mb-4">@Model.Description</p>

            <!-- Product Specifications -->
            <div class="mb-4">
                <h6 class="mb-2">Specifications</h6>
                <ul class="list-unstyled">
                    <li><strong>Brand:</strong> @Model.Brand</li>
                    <li><strong>Processor:</strong> @Model.Processor</li>
                    <li><strong>RAM:</strong> @Model.RAM GB</li>
                    <li><strong>Storage:</strong> @Model.Storage</li>
                    <li><strong>GPU:</strong> @Model.GPU</li>
                    <li><strong>Screen Size:</strong> @Model.ScreenSize inches</li>
                    <li><strong>Resolution:</strong> @Model.Resolution</li>
                </ul>
            </div>

            <!-- Quantity -->
            <div class="mb-4">
                <form method="post" asp-area="Customer" asp-controller="Cart" asp-action="AddToCart" id="addToCartForm">
                    <input type="hidden" name="productId" value="@Model.Id" />
                    <div class="d-flex align-items-center mb-3">
                        <label class="me-2"><strong>Quantity:</strong></label>
                        <input type="number" name="quantity" value="1" min="1" max="100" class="form-control w-25">
                    </div>
                    <!-- Actions -->
                    <div class="d-grid gap-2 mt-3">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <button type="submit" class="btn btn-primary">Add to Cart</button>
                        }
                        else
                        {
                            <a asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="@Url.Action("AddToCart", "Cart", new { productId = Model.Id, quantity = 1 })"
                               class="btn btn-primary">Add to Cart</a>
                        }
                        <button class="btn btn-outline-secondary" type="button">
                            <i class="far fa-heart me-2"></i>Add to Wishlist
                        </button>
                    </div>
                </form>
            </div>

            <!-- Additional Info -->
            <div class="mt-4">
                <div class="d-flex align-items-center mb-2">
                    <i class="fas fa-truck text-primary me-2"></i>
                    <span>Free shipping on orders over $50</span>
                </div>
                <div class="d-flex align-items-center mb-2">
                    <i class="fas fa-undo text-primary me-2"></i>
                    <span>30-day return policy</span>
                </div>
                <div class="d-flex align-items-center">
                    <i class="fas fa-shield-alt text-primary me-2"></i>
                    <span>2-year warranty</span>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function changeMainImage(thumbnail) {
            const mainImage = document.querySelector('.main-product-image');

            mainImage.style.opacity = 0;

            setTimeout(() => {
                mainImage.src = thumbnail.src;
                mainImage.style.opacity = 1;

                document.querySelectorAll('.thumbnail-image').forEach(img => {
                    img.classList.remove('active-thumbnail');
                });
                thumbnail.classList.add('active-thumbnail');
            }, 200);
        }

        document.querySelectorAll('.thumbnail-image').forEach(img => {
            img.addEventListener('click', function() {
                changeMainImage(this);
            });
        });
    </script>
}