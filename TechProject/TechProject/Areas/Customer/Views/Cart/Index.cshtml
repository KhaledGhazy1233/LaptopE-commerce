@model List<Cart>

<div class="container mt-4">
    <h2 class="mb-4 text-center">🛒 Your Shopping Cart</h2>

    <div class="d-flex justify-content-between">
        <button class="btn btn-outline-secondary mb-3" onclick="window.history.back();">⬅️ Back</button>
        <a asp-area="Customer" asp-controller="Cart" asp-action="Checkout" class="btn btn-success mb-3">Proceed to Checkout</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center">
            <h4>Your cart is empty.</h4>
            <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-primary mt-2">🛍 Continue Shopping</a>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover border">
                <thead class="table-dark text-center">
                    <tr>
                        <th>Product</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Total</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody class="align-middle text-center">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <img src="@item.Product.ImageUrl" alt="@item.Product.Name" width="50" class="me-2 rounded">
                                    <strong>@item.Product.Name</strong>
                                </div>
                            </td>
                            <td>@item.Product.Price.ToString("C")</td>
                            <td>@item.Quantity</td>
                            <td>@(item.Product.Price * item.Quantity)</td>
                            <td>
                                <div class="d-flex justify-content-center">
                                    <a asp-area="Customer" asp-controller="Cart" asp-action="RemoveFromCart" asp-route-cartId="@item.Id"
                                       class="btn btn-outline-danger btn-sm me-2">🗑 Remove</a>
                                    <button class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#editModal-@item.Id">✏ Edit</button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @foreach (var item in Model)
        {
            <!-- Edit Quantity Modal -->
            <div class="modal fade" id="editModal-@item.Id" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header bg-warning">
                            <h5 class="modal-title">Edit Quantity</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <form method="post" asp-area="Customer" asp-controller="Cart" asp-action="UpdateQuantity">
                            <div class="modal-body">
                                <input type="hidden" name="cartId" value="@item.Id" />
                                <label for="quantity" class="form-label">New Quantity:</label>
                                <input type="number" name="quantity" value="@item.Quantity" min="1" class="form-control text-center" />
                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn btn-primary">✅ Save</button>
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">❌ Cancel</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        }
    }
</div>

