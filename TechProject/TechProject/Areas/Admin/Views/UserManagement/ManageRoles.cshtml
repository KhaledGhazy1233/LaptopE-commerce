@model Tech.Models.ViewModels.UserVM

@{
    ViewData["Title"] = "User Management";
  
}

<div class="container d-flex justify-content-center mt-5">
    <div class="card shadow-lg w-100">
       
        <div class="card-header bg-primary text-white text-center">
            <h3 class="mb-0">Manage Roles for: <span class="fw-bold">@Model.User.Email</span></h3>
        </div>

        <div class="card-body p-4">
			 <div class="row"> 
                 <div class="col-md-6">
                    <h5><i class="fas fa-phone-alt"></i> <strong>Phone:</strong> @Model.User.PhoneNumber</h5>
                    <h5><i class="fas fa-city"></i> <strong>Gender:</strong> @Model.User.Gender</h5>
                     <h5><i class="fas fa-calendar"></i> <strong>Birth Date:</strong> @Model.User.BirthDate?.ToShortDateString()</h5> 
                 </div> 
                 <div class="col-md-6"> 
                    <h5><i class="fas fa-city"></i> <strong>Country:</strong> @Model.User.Country</h5>
                    <h5><i class="fas fa-city"></i> <strong>City:</strong> @Model.User.City</h5>
                    <h5><i class="fas fa-city"></i> <strong>Street:</strong> @Model.User.Street</h5>
                </div> 
             </div> 

            <hr />

            <form asp-action="UpdateRoles" method="post">
                <input type="hidden" name="userId" value="@Model.User.Id" />

                <div class="mb-4">
                    <label for="roleSelect" class="form-label fw-bold">Select Role:</label>
                    <select class="form-select form-select-lg" name="role" id="roleSelect">
                        @foreach (var role in Model.AllRoles)
                        {
                            <option value="@role.Name" selected="@(Model.Roles.Contains(role.Name) ? "selected" : null)">
                                @role.Name
                            </option>
                        }
                    </select>
                </div>

                <div class="d-flex justify-content-between">
                    <a class="btn btn-secondary px-4" asp-action="Index">
                        <i class="fas fa-arrow-left"></i> Back
                    </a>
                    <button type="submit" class="btn btn-success px-4">
                        <i class="fas fa-save"></i> Update
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
