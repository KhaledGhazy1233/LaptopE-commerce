<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - TechProject</title>
    <link rel="icon" type="image/png" href="">
    <!-- Bootstrap 5 -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <!-- icons-->
	<link href="~/icons/all.min.css" rel="stylesheet" />
  

    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css">

    <!-- Custom Styles -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TechProject.styles.css" asp-append-version="true" />

    <link rel="stylesheet" href="~/css/homestyle.css" asp-append-version="true">
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Bootstrap JS -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    
	
    <!-- DataTables JS -->
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <!-- Toastr CSS -->
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    <!-- Toastr JS -->
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @* <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"> *@

   




	
</head>
<body style="display: flex; flex-direction: column; min-height: 100vh; margin: 0; padding: 0;">
 
    <header>
      
        @* navBar *@
        <div class="navbar nav-1">
            <div class="logo"> <a asp-area="" asp-controller="Home" asp-action="Index">TechProduct</a><span class="dot">.</span></div>

            <div class="search-bar col-3">
                <form method="get" class="d-flex w-100" asp-area="Customer" asp-controller="Home" asp-action="Index">
                    <input type="text" name="searchTerm"  placeholder="Search for product" />
                    <button type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
                </form>
            </div>

            <div class="icons">
                <div class="icon">
                    <i class="fa fa-heart"></i>
                    <a class="text-primary" asp-area="Customer" asp-action="Index" asp-controller="WishList">Your Wishlist</a>
                </div>         
                    <partial name="_LoginPartial" />
            </div>
           
        </div>
        <nav id="nav" class="navbar navbar-expand-lg navbar-light bg-white ">
            <div class="container">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav gap-5">
                        <!-- Home Link -->
                        <li class="nav-item">
                            <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "Home" ? "stable" : "")"
                               asp-area="Customer" aria-current="page" asp-controller="Home" asp-action="Index">
                                Home
                            </a>
                        </li>

                        <!-- Privacy Link -->
                        <li class="nav-item">
                            <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "Privacy" ? "stable" : "")"
                               asp-area="Customer" asp-controller="Home" asp-action="Privacy">
                                Privacy
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "About" ? "stable" : "")"
                               asp-area="Customer" asp-controller="Home" asp-action="About">
                                AboutUs
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewData["ActivePage"]?.ToString() == "Contact" ? "stable" : "")"
                               asp-area="Customer" asp-controller="Home" asp-action="Contact">
                                Contact
                            </a>
                      

                        @if (User.IsInRole(SD.Role_User_Admin))
                        {
                            <!-- Dashboard Link (Admin Only) -->
                            <li class="nav-item">
                                <a class="nav-link "
                                   asp-area="admin" asp-controller="Dashboard" asp-action="Index">
                                    Dashboard
                                </a>
                            </li>
                        }
                    </ul>
                </div>

            </div>
        </nav>
        @* navBar *@


    </header>

    <main role="main" style="flex: 1; padding-bottom: 20px;">

        <div class="container" style="padding-bottom: 20px;">
            <partial name="_Notification" />
            @RenderBody()
    </div>
    </main>


    <footer  style="background-color: #0d0d12; color: white; padding-top: 20px; padding-bottom: 20px;">
        <div class="container text-md-left">
            <div class="row text-md-left g-4">
                <!-- Company Info -->
                <div class="col-lg-3 col-md-6 mb-4">
                    <h5 class="text-uppercase fw-bold mb-4 d-flex align-items-center">
                        <i class="bi bi-laptop me-2"></i> TechProduct
                    </h5>
                    <ul class="list-unstyled">
                        <li class="mb-2 link-item">
                            <a href="#" class="footer-link d-flex align-items-center">
                                <i class="bi bi-info-circle me-2"></i> About Us
                            </a>
                        </li>
                     
                    </ul>
                </div>

                <!-- Support -->
                <div class="col-lg-3 col-md-6 mb-4">
                    <h5 class="text-uppercase fw-bold mb-4">
                        <i class="bi bi-headset me-2"></i> Support
                    </h5>
                    <ul class="list-unstyled">
                        <li class="mb-2 d-flex align-items-start link-item">
                            <i class="bi bi-geo-alt me-2 mt-1"></i>
                            <span>111 Bijoy Sarani, Dhaka, Bangladesh</span>
                        </li>
                        <li class="mb-2 d-flex align-items-start link-item">
                            <i class="bi bi-telephone me-2 mt-1"></i>
                            <span>+88 01847 882540</span>
                        </li>
                        <li class="d-flex align-items-start link-item">
                            <i class="bi bi-envelope me-2 mt-1"></i>
                            <a href="mailto:care@techxpress.com" class="footer-link">care@techxpress.com</a>
                        </li>
                    </ul>
                </div>

                <!-- Social Media -->
                <div class="col-lg-3 col-md-6 mb-4">
                    <h5 class="text-uppercase fw-bold mb-4">
                        <i class="bi bi-people-fill me-2"></i> Follow Us
                    </h5>
                    <ul class="list-unstyled">
                        <li class="mb-2 link-item">
                            <a href="#" class="footer-link d-flex align-items-center">
                                <i class="bi bi-facebook me-2"></i> Facebook
                            </a>
                        </li>
                        <li class="mb-2 link-item">
                            <a href="#" class="footer-link d-flex align-items-center">
                                <i class="bi bi-twitter me-2"></i> Twitter
                            </a>
                        </li>
                        <li class="mb-2 link-item">
                            <a href="#" class="footer-link d-flex align-items-center">
                                <i class="bi bi-instagram me-2"></i> Instagram
                            </a>
                        </li>
                        <li class="link-item">
                            <a href="#" class="footer-link d-flex align-items-center">
                                <i class="bi bi-linkedin me-2"></i> LinkedIn
                            </a>
                        </li>
                    </ul>
                </div>

                <!-- Legal -->
                <div class="col-lg-3 col-md-6 mb-4">
                    <h5 class="text-uppercase fw-bold mb-4">
                        <i class="bi bi-shield-lock me-2"></i> Legal
                    </h5>
                    <ul class="list-unstyled">
                        <li class="mb-2 link-item">
                            <a href="#" class="footer-link d-flex align-items-center">
                                <i class="bi bi-file-text me-2"></i> Terms and Conditions
                            </a>
                        </li>
                      
                    </ul>
                </div>
            </div>

            <div class="text-center mt-4 pt-4 border-top border-secondary">
                <p class="mb-0">&copy; <span id="current-year"></span> TechProduct. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script>
        document.getElementById("current-year").textContent = new Date().getFullYear();
    </script>

    <style>
        .footer-link {
            color: white;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .footer-link:hover {
            color: #0dcaf0; 
            transform: translateX(5px); 
        }

        .link-item {
            transition: all 0.3s ease;
        }

        .link-item:hover {
            transform: translateX(5px); 
        }
    </style>


    @await RenderSectionAsync("Scripts", required: false)
    <script>
        function updateCartCount() {
            $.get("/Customer/Cart/GetCartCount", function (data) {
                $("#cart-count").text(data);
            });
        }

        $(document).ready(function () {
            updateCartCount();  
        });
    </script>

</body>
</html>
